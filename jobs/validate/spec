#!/bin/bash
# shellcheck disable=SC2034,SC1090

set -ex

###############################################################################
# INITIALIZE
###############################################################################
: "${WORKSPACE:=$(pwd)}"

. "$WORKSPACE/ci.bash"
. "$WORKSPACE/juju.bash"

###############################################################################
# FUNCTION OVERRIDES
###############################################################################
function juju::bootstrap
{
    local constraints
    if [[ "$ARCH" = "arm64" ]]; then
        constraints="instance-type=a1.large arch=$ARCH"
    else
        constraints="arch=$ARCH"
    fi

    juju bootstrap "$JUJU_CLOUD" "$JUJU_CONTROLLER" \
         -d "$JUJU_MODEL" \
         --bootstrap-series "$SERIES" \
         --force \
         --bootstrap-constraints "$constraints" \
         --model-default test-mode=true \
         --model-default resource-tags=owner=k8sci \
         --model-default image-stream=daily
}

function juju::deploy
{
    local constraints
    if [[ "$ARCH" = "arm64" ]]; then
        constraints="instance-type=a1.2xlarge arch=$ARCH"
    else
        constraints="arch=$ARCH"
    fi

    tee overlay.yaml <<EOF> /dev/null
series: $SERIES
applications:
  easyrsa:
    constraints: $constraints root-disk=8G
  etcd:
    constraints: $constraints root-disk=8G
  kubeapi-load-balancer:
    constraints: $constraints
  kubernetes-master:
    constraints: $constraints root-disk=16G
    options:
      channel: $SNAP_VERSION
  kubernetes-worker:
    constraints: $constraints root-disk=16G
    options:
      channel: $SNAP_VERSION
EOF

    juju deploy -m "$JUJU_CONTROLLER:$JUJU_MODEL" \
         --overlay overlay.yaml \
         --force \
         --channel "$JUJU_DEPLOY_CHANNEL" "$JUJU_DEPLOY_BUNDLE"
}


###############################################################################
# ENV
###############################################################################
SNAP_VERSION=${1:-1.19/edge}
SERIES=${2:-bionic}
JUJU_DEPLOY_BUNDLE=cs:~containers/charmed-kubernetes
JUJU_DEPLOY_CHANNEL=${3:-edge}
JUJU_CLOUD=aws/us-east-2
JUJU_CONTROLLER=validate-$(identifier::short)
JUJU_MODEL=validate-ck
ARCH=${4:-amd64}
JOB_NAME_CUSTOM="validate-ck-$ARCH-$SERIES-$SNAP_VERSION"
JOB_ID=$(identifier)
TMP_DIR=$(mktemp -d -t ci-XXXXXXXXXX)


###############################################################################
# START
###############################################################################
ci::run
