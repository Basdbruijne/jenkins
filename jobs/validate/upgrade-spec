#!/bin/bash
#
# Upgrade spec
#
# Tests upgrading from current stable versions to latest edge


# shellcheck disable=SC2034,SC1090

set -ex

# Init
: "${WORKSPACE:=$(pwd)}"

. "$WORKSPACE/ci.bash"
. "$WORKSPACE/juju.bash"


# Override test::execute from sourced juju.bash to account for snap upgrades
function test::execute
{
    declare -n is_pass=$1
    TOX_WORK_DIR="$WORKSPACE/.tox" timeout 2h tox -e py3 -- pytest \
                --html="$TMP_DIR/report.html" \
                jobs/integration/validation.py \
                --is-upgrade \
                --upgrade-snap-channel "$SNAP_VERSION_UPGRADE_TO" \
                --upgrade-charm-channel edge \
                --cloud "$JUJU_CLOUD" \
                --model "$JUJU_MODEL" \
                --controller "$JUJU_CONTROLLER"
    ret=$?
    is_pass="True"
    if (( $ret > 0 )); then
        is_pass="False"
    fi
}

# Setup Environment
LONG_ID=$(identifier)
ID=$(echo "$LONG_ID" | cut -f1 -d-)

SNAP_VERSION_UPGRADE_TO=1.19/edge
SNAP_VERSION=${1:-1.16/stable}
SERIES=${2:-bionic}
JUJU_DEPLOY_BUNDLE=cs:~containers/charmed-kubernetes
JUJU_DEPLOY_CHANNEL=${3:-stable}
JUJU_CLOUD=aws/us-east-2
JUJU_CONTROLLER=validate-$ID
JUJU_MODEL=validate-upgrade
ARCH=${4:-amd64}
JOB_NAME_CUSTOM="validate-ck-upgrade-$SERIES-$SNAP_VERSION"
TMP_DIR=$(mktemp -d -t ci-XXXXXXXXXX)

compile::env
{
    build_starttime=$(timestamp)

    juju::bootstrap
    juju::deploy
    juju::wait

    deploy_endtime=$(timestamp)

    test::execute result
    test::report "$result" "$build_starttime" "$deploy_endtime"

} 2>&1 | sed -u -e "s/^/[$JUJU_CONTROLLER] /" | tee "$TMP_DIR/ci.log"
